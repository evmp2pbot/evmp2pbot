{
  "name": "lnp2pbot",
  "version": "0.9.12",
  "author": "Francisco Calder√≥n <negrunch@grunch.dev>",
  "description": "P2P lightning network telegram bot",
  "main": "app.js",
  "scripts": {
    "build": "tsc --noEmit false",
    "start": "node ./app-prod",
    "dev": "nodemon -e js,ts --exec 'ts-node --swc' ./app.js",
    "lint": "tsc --noEmit; tsc --noEmit -p tsconfig.js.json; eslint .",
    "format": "prettier --write '**/*.js' '**/*.ts'",
    "pretest": "tsc",
    "test": "export NODE_ENV=test && mocha --require ts-node/register --extensions ts,js --exit tests/"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/secret-manager": "^5.0.1",
    "@grammyjs/i18n": "^0.5.1",
    "@grammyjs/ratelimiter": "^1.1.5",
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.0",
    "mongoose": "8.1.3",
    "node-schedule": "^2.0.0",
    "nostr-tools": "^1.7.4",
    "qrcode": "^1.5.0",
    "socks-proxy-agent": "^6.2.0-beta.0",
    "telegraf": "^4.15.3",
    "typegram": "^5.2.0",
    "websocket-polyfill": "0.0.3",
    "winston": "^3.7.2"
  },
  "keywords": [
    "telegram",
    "bot",
    "p2p",
    "network"
  ],
  "devDependencies": {
    "@swc/core": "^1.4.0",
    "@swc/helpers": "^0.5.6",
    "@tsconfig/node20": "^20.1.2",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.3.4",
    "chokidar": "^3.5.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "mocha": "^9.2.2",
    "nodemon": "2.0.19",
    "prettier": "^2.6.2",
    "regenerator-runtime": "^0.14.1",
    "sinon": "^11.1.2",
    "telegram-test-api": "^2.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
